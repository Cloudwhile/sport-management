{
  "name": "sport-management-backend",
  "version": "1.0.0",
  "description": "学校体测数据管理系统 - 后端服务",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc -p tsconfig.build.json",
    "build:dev": "tsc",
    "type-check": "tsc --noEmit",
    "db:migrate": "tsx src/database/migrator.ts up",
    "db:migrate:up": "tsx src/database/migrator.ts up",
    "db:migrate:down": "tsx src/database/migrator.ts down",
    "db:migrate:reset": "tsx src/database/migrator.ts reset",
    "db:migrate:status": "tsx src/database/migrator.ts status",
    "db:seed": "tsx src/database/migrator.ts up seed",
    "db:seed:undo": "tsx src/database/migrator.ts down seed",
    "db:seed:reset": "tsx src/database/migrator.ts reset seed"
  },
  "keywords": [
    "sport",
    "management",
    "education"
  ],
  "author": "AptS:1547 & AptS:1548",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.2",
    "umzug": "^3.8.2",
    "validator": "^13.11.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.10.1",
    "@types/validator": "^13.15.9",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
